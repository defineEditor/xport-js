{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "outDir": "dist",
        "allowJs": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": ".",
        "target": "ES2018"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/example.ts"
    ]
}
